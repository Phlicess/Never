<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/navigation_drawer_width"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1b1b1b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/round_head"
                  android:layout_marginLeft="15sp"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            >
        </LinearLayout>
        <!--<ImageView
            android:layout_width="@dimen/round_head_size"
            android:layout_height="@dimen/round_head_size"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/phlicess"
            android:scaleType="centerCrop"
            />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5sp"
            android:paddingLeft="15sp">

            <!-- 用户名 -->
            <TextView android:id="@+id/userName_tv"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:textSize="18sp"
                      android:paddingTop="5sp"
                      android:paddingBottom="5sp"
                      android:text="Mask"
                      android:layout_gravity="left" />

            <!-- 关注量 -->
            <TextView android:id="@+id/attention_count_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/light_white"
                  android:textSize="15sp"
                  android:paddingTop="5sp"
                  android:paddingBottom="5sp"
                  android:text="500 人关注我"
                  android:layout_gravity="left" />

        </LinearLayout>

    </LinearLayout>

    <!-- 上分割线 -->
    <View android:layout_width="220sp"
          android:layout_height="0.1dip"
          android:background="#44ffffff"
          android:layout_marginTop="15sp"
          android:layout_gravity="right"/>
    <!-- 简介 -->
    <TextView android:id="@+id/intro_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/light_white"
              android:singleLine="true"
              android:ellipsize="end"
              android:textSize="12sp"
              android:paddingLeft="20sp"
              android:paddingRight="5sp"
              android:paddingTop="10sp"
              android:paddingBottom="10sp"
              android:text="学习中....请勿打扰！学习中....请勿打扰！"
              android:layout_gravity="center_horizontal" />
    <!-- 下分割线 -->
    <View android:layout_width="220sp"
        android:layout_height="0.1dip"
        android:background="#44ffffff"
        android:layout_marginBottom="5sp"
        android:layout_gravity="right"/>

    <!-- menu list -->
    <ListView
        android:id="@+id/menu_ls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        tools:context=".NavigationDrawerFragment" />


    <!-- Setting and night mode button -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <!-- setting button -->
        <LinearLayout android:id="@+id/setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:paddingLeft="10sp"
                android:src="@drawable/menu_setting_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lighter_white"
                android:textSize="14sp"
                android:text="设置"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

